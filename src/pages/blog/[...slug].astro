---
import { type CollectionEntry, getCollection } from "astro:content";
import PageLayout from "@layouts/PageLayout.astro";
import Container from "@components/Container.astro";
import FormattedDate from "@components/FormattedDate.astro";
import { readingTime } from "@lib/utils";
import BackToPrev from "@components/BackToPrev.astro";
import ProgressBar from "@components/ProgressBar.astro";

export async function getStaticPaths() {
    const posts = (await getCollection("blog"))
        .filter((post) => !post.data.draft)
        .sort((a, b) => b.data.date.valueOf() - a.data.date.valueOf());
    return posts.map((post) => ({
        params: { slug: post.slug },
        props: post,
    }));
}
type Props = CollectionEntry<"blog">;

const post = Astro.props;
const { Content } = await post.render();
---

<PageLayout title={post.data.title} description={post.data.description}>
    <Container>
        <ProgressBar />
        <div class="">
            <BackToPrev href="/blog"> Back to blog </BackToPrev>
        </div>
        <div class="space-y-1 my-10">
            <div class="flex items-center gap-1.5">
                <div class="font-base text-sm">
                    <FormattedDate date={post.data.date} />
                </div>
                &bull;
                <div class="font-base text-sm">
                    {readingTime(post.body)}
                </div>
            </div>
            <div
                class="text-2xl font-semibold text-black dark:text-white"
            >
                {post.data.title}
            </div>
        </div>
        <article class="">
            <Content />
        </article>
    <script
        src="https://giscus.app/client.js"
        data-repo="DavideBri/davidebri.github.io"
        data-repo-id="R_kgDONS3zrg"
        data-category="Announcements"
        data-category-id="DIC_kwDONS3zrs4CkuiO"
        data-mapping="title"
        data-strict="0"
        data-reactions-enabled="1"
        data-emit-metadata="0"
        data-input-position="bottom"
        data-theme="preferred_color_scheme"
        data-lang="en"
        data-loading="lazy"
        crossorigin="anonymous"
        async
    ></script>
    </Container>
</PageLayout>
